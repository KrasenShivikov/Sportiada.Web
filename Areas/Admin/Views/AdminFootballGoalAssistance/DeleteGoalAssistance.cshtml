@model FootballGoalAssistanceDeleteModel

@{
    ViewData["Title"] = "DeleteGoalAssistance";
}

@{ 
    string firstHalf = Model.FirstHalf ? "първо полувреме" : "второ полувреме";
}

<h2>Наистина ли желаете да изтриете</h2>

<table class="table table-bordered">
    <tr>
        <td>@Model.Minute' - @firstHalf</td>
        <td><img src="@Url.Content(Model.Country)" height="20" width="30" /> @Model.PlayerName</td>
    </tr>
</table>

<a href="/admin/deleteGoalAssistance" class="btn btn-success">Да</a><a href="/admin/footballGame/@Model.GameId" class="btn btn-danger">Не</a>

