@model IEnumerable<FootballRefereeTypeAdminModel>

@{
    ViewData["Title"] = "RefereeTypes";
}

<h2>Видове рефери</h2>
<a href="/admin">Към начална страница</a>

<table class="table table-hover">
    <tr>
        <th>Вид рефер</th>
        <th><a href="/admin/createRefereeType" class="btn btn-primary">Създай вид рефер</a></th>
    </tr>
    @if (Model.Any())
    {
        foreach (var t in Model)
        {
            <tr>
                <td>@t.Name</td>
                <td><a href="/admin/updateRefereeType/@t.Id">Промени</a> | <a href="/admin/deleteRefereeType/@t.Id">Изтрий</a></td>
            </tr>
        }
    }
</table>

