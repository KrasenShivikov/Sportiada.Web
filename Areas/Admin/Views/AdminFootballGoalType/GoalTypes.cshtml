@model IEnumerable<FootballGoalTypeAdminModel>

@{
    ViewData["Title"] = "GoalTypes";
}

<h2>Видове голове</h2>
<a href="/admin">Към начална страница</a>
<table class="table table-hover">
    <tr>
        <th>Гол</th>
        <th><a href="/admin/createGoalType" class="btn btn-primary">Добави вид гол</a></th>
    </tr>
    @if (Model.Any())
    {
        foreach (var t in Model)
        {
            <tr>
                <td><img src="@Url.Content(t.Picture)"/> @t.Name</td>
                <td><a href="/admin/updateGoalType/@t.Id">Промени</a> | <a href="/admin/deleteGoalType/@t.Id">Изтрий</a></td>
            </tr>
        }
    }
</table>

